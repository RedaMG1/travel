{% extends 'base.html.twig' %}

{% block title %}Hello DetailController!
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div
			class="row">
			<!-- Modal -->
			<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="imageModalLabel">Image Preview</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body">
							<img src="" id="previewImage" alt="Image Preview" class="img-fluid">
						</div>
					</div>
				</div>
			</div>

			<!-- Gallery Section with Carousel -->
			<div class="col-md-6">
				<h2>Gallery</h2>
				<div id="imageCarousel" class="carousel slide" data-ride="carousel">
					<div class="carousel-inner">


						{% for key, gallery in gallerys %}
							<div class="carousel-item {% if loop.first %}active{% endif %}">
								<a href="#" class="image-link" data-image="{{ asset('assets/images/' ~ gallery.image) }}">
									<img src="{{ asset('assets/images/' ~ gallery.image) }}" alt="Image {{ loop.index }}" class="img-fluid">
								</a>
							</div>
						{% endfor %}

						<!-- Add more carousel items as needed -->
					</div>
					<a class="carousel-control-prev" href="#imageCarousel" role="button" data-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#imageCarousel" role="button" data-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
			</div>

			<!-- Contact Form Section -->
			<div
				class="col-md-6 contact-form">
				<!-- Added contact-form class -->
				<h2>Contact Us</h2>
				{{getTour.name}}
				{{ form_start(form) }}
				<div class="form-row">
					<div
						class="form-group col-md-6">
						{# <label for="firstName">First Name</label> #}
						{{ form_row(form.first_name) }}
						{# <input type="text" class="form-control" id="firstName" name="firstName" placeholder="Enter your first name" required> #}
					</div>
					<div
						class="form-group col-md-6">
						{# <label for="lastName">Last Name</label> #}
						{{ form_row(form.last_name) }}
						{# <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Enter your last name" required> #}
					</div>
				</div>

				<div class="form-row">
					<div
						class="form-group col-md-6">
						{# <label for="email">Email</label> #}
						{{ form_row(form.email) }}
						{# <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required> #}
					</div>
					<div
						class="form-group col-md-6">
						{# <label for="country">Country</label> #}
						{{ form_row(form.country) }}
						{# <input type="text" class="form-control" id="country" name="country" placeholder="Enter your country" required> #}
					</div>
				</div>

				<div class="form-row">
					<div
						class="form-group col-md-4">
						{# <label for="adults">Number of Adults</label> #}
						{{ form_row(form.adult) }}
						{# <input type="number" class="form-control" id="adults" name="adults" placeholder="Enter the number of adults" required> #}
					</div>
					<div
						class="form-group col-md-4">
						{# <label for="children">Number of Children</label> #}
						{{ form_row(form.children) }}
						{# <input type="number" class="form-control" id="children" name="children" placeholder="Enter the number of children" required> #}
					</div>
					<div
						class="form-group col-md-4">
						{# <label for="date">Date</label> #}
						{{ form_row(form.date) }}
						{# <input type="date" class="form-control" id="date" name="date" required> #}
					</div>
				</div>

				<div
					class="form-group">
					{# <label for="message">Message</label> #}
					{{ form_row(form.message) }}
					{# <textarea class="form-control" id="message" name="message" rows="4" placeholder="Type your message here" required></textarea> #}
				</div>

				{# <button type="submit" class="btn btn-primary">Send</button> #}
				{{ form_end(form) }}
			</div>
		</div>
	</div>

	<!-- jQuery -->
	<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

	<!-- Popper.js -->
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>

	<!-- Bootstrap scripts -->
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

	<!-- Your custom script -->
	<script>
		$(document).ready(function () { // Initialize the carousel
$('#imageCarousel').carousel();

// Handle image link click
$('.image-link').on('click', function (e) {
e.preventDefault();
var imageUrl = $(this).data('image');
$('#previewImage').attr('src', imageUrl);
$('#imageModal').modal('show');
});
});
	</script>
	<style>
		/* Contact Form Section Styles */
		/* Contact Form Section Styles */
		.contact-form {
			background-color: #f0f8ff; /* Alice Blue - Light blue background color */
			padding: 20px;
			border-radius: 10px;
			box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
		}

		.form-row {
			margin-bottom: 20px;
		}

		.form-group {
			margin-bottom: 20px;
		}

		label {
			color: #2f4f4f; /* Dark Slate Gray - Dark gray label color */
			font-weight: bold;
		}

		input,
		textarea {
			background-color: #ffffff; /* White input background color */
			border: 1px solid #87cefa; /* Light Sky Blue - Light blue border */
			border-radius: 8px;
			padding: 12px;
			width: 100%;
			transition: border-color 0.3s ease-in-out;
		}

		input:focus,
		textarea:focus {
			border-color: #4682b4; /* Steel Blue - Highlight border color on focus */
		}

		button[type="submit"] {
			background-color: #4169e1; /* Royal Blue - Blue submit button color */
			color: #fff;
			border: none;
			padding: 12px 20px;
			border-radius: 8px;
			cursor: pointer;
			transition: background-color 0.3s ease-in-out;
		}

		button[type="submit"]:hover {
			background-color: #3558c9; /* Darker Royal Blue on hover */
		}

		.carousel-item img {
			height: 400px; /* Set a fixed height for all images */
			object-fit: cover; /* Ensure that the image covers the specified dimensions */
			width: 100%; /* Ensure the width takes up the full container */
		}
	</style>
{% endblock %}
