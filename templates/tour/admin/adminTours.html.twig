{% extends 'base.html.twig' %}

{% block title %}Tools
{% endblock %}

{% block body %}

	<div class="col-lg-12  contenu-blanc shadow-lg">

		<h1>Tools</h1>
		<table class="table table-striped table-advance table-hover">
			<thead>
				<tr class="bg-entete">
					<th class="col-md-1">Id</th>


					<th class="col-md-1">Name</th>
					<th class="col-md-1">Price</th>
					<th class="col-md-1">Description</th>
					<th class="col-md-1">Location</th>
					<th class="col-md-1">Days</th>
					<th class="col-md-1">Image</th>
					<th class="col-md-1">Online</th>

					<th class="col-md-6">Actions<span class="pull-right">
							<a href="{{ path('create_tour')}}" class="btn btn-primary btn-sm">
								<i class="fa fa-save"></i>
								Add a new Tour</a>
						</span>
					</th>

				</tr>
				{% if button is defined %}
					<button type="submit" class="btn btn-primary">
						{{ button }}
					</button>
				{% endif %}
				<div class="container-fluid contenu">
					{% if not tours.items is same as ([]) %}
						{#in case theres no data yet#}
						There is
						{{ tours.getTotalItemCount }}
						Tour!!


					</thead>
					<br>
					{% for flash_message in app.flashes('success') %}
						<div class="alert alert-success">
							{{ flash_message }}
						</div>
					{% endfor %}
					<tbody>

						{% for key, tour in tours %}
							<tr>
								<td>{{ tour.id }}</td>
								<td>{{ tour.name }}</td>
								<td>{{ tour.price }}</td>
								<td class="col-md-3">
									<div class="description-cell">
										<div class="description-preview">{{ tour.description|slice(0, 100) }}</div>
										{% if tour.description|length > 100 %}
											<div class="description-full" style="display: none;">{{ tour.description }}</div>
										{% endif %}
									</div>
								</td>
								<td>{{ tour.location }}</td>
								<td>{{ tour.day }}</td>
								<td>{{ tour.image }}</td>
								<td>
								{% if tour.online == 1 %}
								{{ 'yes' }}
								{% else %}
								{{ 'no' }}
								{% endif %}
								</td>
								{# <td>{{ tour.createdAt }}</td> #}


								<td
									class="row">

									<!-- formulaire pour demander la modification ou la suppression -->
									<form>

										<button type="submit" class="btn btn-primary btn-sm" formaction="{{ path('edit_tour',{id : tour.id}) }}" title="Edit">
											<i title="Edit">
												<i class="fa fa-pencil"></i>
												Edit</button>


											<button type="submit" class="btn btn-danger btn-sm" formaction="{{ path('delete_tour',{id : tour.id}) }}" title="Supprimer" onclick="return confirm('Do you really want to delete this tour ?');">
												<i class="fa fa-trash-o "></i>
												delete</button>

											<input
											type="hidden" name="_token" value="{{ csrf_token('action-item' ~ tour.id) }}">
										{#  ~     pour concat√©ner des chaines en twig #}
										</form>
									</td>
								</td>
							</tr>
						{% endfor %}
					</tbody>

				</table>
				<div class="d-flex justify-content-center">
					{{ knp_pagination_render(tours) }}
				</div>
			{% else %}
				there is no tours yet
			{% endif %}
		</div>
		<style>
			.description-cell {
				position: relative;
			}

			.description-preview {
				max-height: 100px; /* Set a maximum height for the preview */
				overflow: scroll;
			}

			.read-more-btn {
				position: absolute;
				bottom: 0;
				right: 0;
				background: transparent;
				border: none;
				cursor: pointer;
				color: blue; /* Adjust the color as needed */
			}

			.description-full {
				display: none;
			}
		</style>


	</div>
{% endblock %}
