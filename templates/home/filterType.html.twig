{% extends 'base.html.twig' %}

{% block title %}Filter!
{% endblock %}

{% block body %}
	<br><div class="text-center mb-4">
		<h2 style="color: blue;">Here's your searched tours
		</h2><br>
		<div class="container">
			<div class="row">
				{% for key, tour in toursType %}
					<div class="col-md-4">
						<div class="blocks-destination-block d-flex flex-column">
							<img src="{{ asset('assets/images/' ~ tour.image) }}" alt="Tour Image" class="img-fluid">
							<div class="d-flex justify-content-between align-items-center mt-4">
								<h5 class="mb-0 text-primary">
									<a href="{{ path('detail_display',{id:tour.id}) }}">{{ tour.name }}</a>
								</h5>
								<h5 class="mb-0">{{ tour.day }}
									days</h5>
							</div>
							<p class="rate mb-1">
								<i class="icon-star text-warning">*</i>
								<i class="icon-star text-warning">*</i>
								<i class="icon-star text-warning">*</i>
								<i class="icon-star text-warning">*</i>
								<i class="icon-star text-warning">*</i>
							</p>
							<p class="description mb-1">{{ tour.description }}</p>
							<div class="mt-auto d-flex justify-content-between align-items-center">
								<a class="mb-0 text-primary" href="#">Read more</a>
								<p class="mb-0 text-success">${{ tour.price }}</p>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
	
{% endblock %}
